<div class="tilt-box">
    <slot /> <!-- Allows content to be passed in -->
  </div>
  
  <style>
    .tilt-box {
      transition: transform 0.2s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      perspective: 1000px;
      border-radius: 20%;
    }

    .tilt-box:hover {
        box-shadow: 0 50px 30px rgba(0, 0, 0, 0.3); /* Change the values for different shadow intensity */
    }
  </style>
  
  <script>
    const tiltBox = document.querySelector('.tilt-box');
  
    tiltBox.addEventListener('mousemove', (e) => {
      const { width, height, left, top } = tiltBox.getBoundingClientRect();
      const x = e.clientX - left - width / 2;
      const y = e.clientY - top - height / 2;
      const rotateX = -y / (height / 30);
      const rotateY = x / (width / 30);
  
      tiltBox.style.transform = `rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
    });
  
    tiltBox.addEventListener('mouseleave', () => {
      tiltBox.style.transform = 'rotateX(0) rotateY(0)';
    });
  </script>
  
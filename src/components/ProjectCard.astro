---
import TiltBox from "../components/TiltBox.astro";

interface Props {
    title: string;
    body: string;
    href: string;
    image: string;
}

const { title, href, body, image } = Astro.props;
---

<TiltBox>
    <div class="project-card">
        <a href={href}>
            <div>
                <h1>{title}</h2>
                <p
                    class="text-lg"
                    style="max-width: 30rem;"
                >
                    {body}
                </p>
            </div>
            <div>
                <img src={image} />
            </div>
        </a>
    </div>
</TiltBox>

<style>
    .project-card {
        display: flex;
        max-height: 15 rem;
        border: solid rgb(139, 43, 43) 7px;
        border-radius: 4em;
    }

	.project-card > a > div {
		margin: 1rem;
	}

	.project-card > a > div > img {
		border: solid rgb(255, 165, 0) 5px;
		border-radius: 4em;
        max-height: 30rem;
	}
</style>
